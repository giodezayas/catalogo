# Variables de Entorno para Producción
# Copia este archivo a .env.local para desarrollo local
# En Vercel, configura estas variables en Settings → Environment Variables

# Base de datos PostgreSQL (Supabase)
# Formato: postgresql://postgres:PASSWORD@HOST:5432/postgres
DATABASE_URL=

# Autenticación JWT
# Genera una clave segura con: openssl rand -base64 32
JWT_SECRET=

# Credenciales del panel de administración
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# URL del sitio (opcional, para producción)
NEXT_PUBLIC_SITE_URL=
